<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_software"
    android:layout_height="235dp"
    android:background="#F3F3F3"
    android:padding="15dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cancel_software"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#ff3d3d3d"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表"
        android:id="@+id/send_software"
        android:textColor="#ff39aff9"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/et_software"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:hint="说点什么吧"
        android:gravity="start"
        android:padding="15dp"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_software"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>