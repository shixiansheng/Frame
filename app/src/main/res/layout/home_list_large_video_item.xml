<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_list_large_video_root_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15.20dp">

    <TextView
        android:id="@+id/home_list_large_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="要用ps把图片截成16比9的图像,具体步骤如下: 启动ps软件,在ps里打开特定的图片;"
        android:textColor="#FF3D3D3D"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.abr.inabr.weight.videoplayer.SampleCoverVideo
        android:id="@+id/home_list_large_video_detail"
        android:layout_width="0dp"
        android:layout_height="193dp"
        android:layout_marginTop="8.65dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_list_large_video_title" />


    <TextView
        android:id="@+id/home_list_large_video_duration"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="8.65dp"
        android:layout_marginRight="8.65dp"
        android:visibility="gone"
        android:text="04:30"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_list_large_video_detail"
        app:layout_constraintRight_toRightOf="@+id/home_list_large_video_detail" />

    <TextView
        android:id="@+id/home_list_large_video_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8.65dp"
        android:text="玩无止境"
        android:textColor="#3ba5ec"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_list_large_video_detail"
        app:layout_constraintTop_toBottomOf="@+id/home_list_large_video_detail" />

    <TextView
        android:id="@+id/home_list_large_video_browse"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="26.92dp"
        android:text="浏览 1.2w"
        android:textColor="#FF9B9B9B"
        android:visibility="gone"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/home_list_large_video_label"
        app:layout_constraintTop_toTopOf="@+id/home_list_large_video_label" />

    <TextView
        android:id="@+id/home_list_large_video_comment"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="评论 175"
        android:textColor="#FF9B9B9B"
        android:textSize="12sp"
       app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="76dp"
        app:layout_constraintTop_toTopOf="@+id/home_list_large_video_browse" />

    <TextView
        android:id="@+id/home_list_large_video_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2018-01-23"
        android:textColor="#FF9B9B9B"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_list_large_video_browse" />

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginTop="15.20dp"
        android:background="#e0e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_list_large_video_comment" />
</android.support.constraint.ConstraintLayout>
