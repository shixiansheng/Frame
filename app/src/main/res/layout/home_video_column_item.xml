<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5.0dp"
    android:paddingRight="5.0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/video_column_item_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/video_column_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dk" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/video_column_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50.20dp"
        android:gravity="center"
        android:text="车匠"
        android:textColor="#404040"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/video_column_item_cardView"
        app:layout_constraintRight_toRightOf="@+id/video_column_item_cardView"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
