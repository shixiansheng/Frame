<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingLeft="15dp"
    android:background="@android:color/white"
    android:paddingBottom="20dp"
    android:paddingRight="15dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_comment_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/people_place_holder_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我"
        android:textColor="#ff3d3d3d"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/my_comment_item_icon"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/my_comment_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/my_comment_item_icon"
        />
    <TextView
        android:id="@+id/my_comment_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:20"
        android:textColor="#ff9b9b9b"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_comment_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/my_comment_item_icon"
        />


    <TextView
        android:id="@+id/my_comment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-01-05"
        android:textColor="#ff9b9b9b"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@id/my_comment_item_time"
        app:layout_constraintTop_toTopOf="@id/my_comment_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/my_comment_item_icon"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/my_comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="细节讲得好，讲师从业经验丰富！"
        android:textColor="#ff707070"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/my_comment_item_icon"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#F3F3F3"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="@id/my_comment_item_content"
        app:layout_constraintTop_toBottomOf="@id/my_comment_item_content"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:id="@+id/my_comment_item_img"
            android:layout_width="97dp"
            android:layout_height="54dp"
            android:src="@drawable/article_item_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/my_comment_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/my_comment_item_img"
            app:layout_constraintBottom_toBottomOf="@id/my_comment_item_img"
            android:layout_marginLeft="20dp"
            android:minLines="2"
            android:text="PG One夜会李小璐 顺便做了B级车"
            android:textColor="#3D3D3D"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/my_comment_item_img"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>