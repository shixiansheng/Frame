    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
     >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/magazine_buy_rlv"
        android:name="cn.abr.inabr.fragment.buyfragment.MagazineFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:context="cn.abr.inabr.fragment.buyfragment.MagazineFragment"
        tools:listitem="@layout/fragment_item_magazine" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_rlv_shadow"/>
</FrameLayout>
