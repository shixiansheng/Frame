<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_list_default_root_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15.20dp">

    <ImageView
        android:id="@+id/home_list_default_img"
        android:layout_width="111dp"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_list_default_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:maxLines="3"
        android:minLines="2"
        android:text="全球未来出行大会秘书长王丰斌新年感悟:芳华已远 不越山全球未来出行"
        android:textColor="#404040"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/home_list_default_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_list_default_img" />

    <TextView
        android:id="@+id/home_list_default_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="阅读(333)"
        android:textColor="#868686"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_list_default_title"
        app:layout_constraintTop_toBottomOf="@+id/home_list_default_title" />

    <TextView
        android:id="@+id/home_list_default_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="评论 345"
        android:textColor="#868686"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_list_default_title"
        app:layout_constraintRight_toRightOf="@+id/home_list_default_title"
        app:layout_constraintTop_toTopOf="@+id/home_list_default_browse" />

    <TextView
        android:id="@+id/home_list_default_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-03-07"
        android:textColor="#868686"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_list_default_browse" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15.20dp"
        android:background="#e0e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_list_default_comment" />
</android.support.constraint.ConstraintLayout>
