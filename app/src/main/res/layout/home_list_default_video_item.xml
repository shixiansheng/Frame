<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_list_default_video_root_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15.20dp">

    <ImageView
        android:id="@+id/home_list_default_video_img"
        android:layout_width="111dp"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_list_default_video_play"
        android:layout_width="wrap_content"
        android:layout_height="17.30dp"
        android:src="@drawable/ic_player_play_icon"
        app:layout_constraintBottom_toBottomOf="@+id/home_list_default_video_img"
        app:layout_constraintLeft_toLeftOf="@+id/home_list_default_video_img"
        app:layout_constraintRight_toRightOf="@+id/home_list_default_video_img"
        app:layout_constraintTop_toTopOf="@+id/home_list_default_video_img" />

    <TextView
        android:id="@+id/home_list_default_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.84dp"
        android:layout_marginRight="3.84dp"
        android:text="04:35"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_list_default_video_img"
        app:layout_constraintRight_toRightOf="@+id/home_list_default_video_img" />

    <TextView
        android:id="@+id/home_list_default_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18.75dp"
        android:maxLines="3"
        android:minLines="2"
        android:text="要用ps把图片截成16比9的图像,具体步骤如下:"
        android:textColor="#FF3D3D3D"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/home_list_default_video_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_list_default_video_img" />

    <!--<TextView
        android:id="@+id/home_list_default_video_label"
        style="@style/WrapWrap.TextView"
        android:layout_marginTop="7.20dp"
        android:text="玩无止境"
        android:textColor="#3ba5ec"
        android:textSize="@dimen/px_24_sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_list_default_video_title"
        app:layout_constraintTop_toBottomOf="@+id/home_list_default_video_title" />-->

    <TextView
        android:id="@+id/home_list_default_video_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.20dp"
        android:text="玩无止境"
        android:textColor="#3ba5ec"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_list_default_video_title"
        app:layout_constraintTop_toBottomOf="@+id/home_list_default_video_title" />

    <TextView
        android:id="@+id/home_list_default_video_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论 175"
        android:textColor="#FF9B9B9B"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/home_list_default_video_title"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toTopOf="@+id/home_list_default_video_label"
        app:layout_constraintBaseline_toBaselineOf="@id/home_list_default_video_label"
        app:layout_constraintBottom_toBottomOf="@id/home_list_default_video_img"/>

    <TextView
        android:id="@+id/home_list_default_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-01-23"
        android:textColor="#FF9B9B9B"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_list_default_video_label" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15.20dp"
        android:background="#e0e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_list_default_video_comment" />
</android.support.constraint.ConstraintLayout>
